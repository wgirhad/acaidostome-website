    $(this).toggleClass("fa-plus").toggleClass("fa-minus");
});

function recalcula() {
    var ycont = $(".cont-cadastro").offset().top;
    var ht = window.innerHeight;
    var dsm = (window.innerWidth > 991)? 104: 0;

    if ($(".acai-navbar").length <= 0) {
        dsm = 0;
        $(".cont-cadastro").css("margin-bottom", "0");
    }

    var _siz = ht - ycont - dsm;

    $(".cont-cadastro").css("min-height", _siz + "px");
}

function cadastraCliente(form) {
    return new Promise(function(callback) {
        var _url = "{{base_path}}/backend/cadastrar-cliente/index.php";
        var data = $(form).serialize();
        $.post(_url, data, callback, "json");
    });
}

function consultaPontos(form) {
    return new Promise(function(callback) {
        var _url = "{{base_path}}/backend/pontos-cliente/index.php";
        var data = $(form).serialize();
        $.post(_url, data, callback, "json");
    });
}

function _log(a) {
    if (a.status) {
        var _num = ("000000" + a.dados).substr(-6,6);
        swal("Parabéns!", "Código de compra nº " + _num, "success").then(_reload);
    } else {
        swal("Algo deu errado...", a.msgErro, "error");
    }
}

function _reload() {
    location.reload();
}

function _mostraPontos(a) {
    if (a.status) {
        var area = $(".area-info-pontos");
        area.find(".NOME").text(a.dados.NOME.toLowerCase())
        area.find(".SALDO").text(a.dados.SALDO)
        area.find(".PONTOS").text(a.dados.PONTOS)
        area.slideDown();
    } else {
        alert(a.msgErro);
    }
}

