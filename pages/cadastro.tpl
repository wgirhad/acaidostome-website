$(".form-cadastro").on("submit", function(){
    var that = this;
    var rows = getTable(getFArray(that));

    swal("Confirme os dados abaixo", "<table class=\"table text-left\">" + rows + "</table>").then(function(z) {
        cadastraCliente(that).then(_log);
    }).catch(swal.noop);
    return false;
});

function getTable(data) {
    var result = "";
    var _vars = {};
    if (data.TIPO == "I") {
        _vars = {
            "NOME": "Nome Completo",
            "DOC": "CPF",
            "EMAIL": "Email",
            "LOG": "Endereço",
            "NUM": "Nº"
        };
    }

    if (data.TIPO == "C") {
        _vars = {
            "NOME": "Nome Tucano Master",
            "DOC": "CPF",
            "EMAIL": "Email",
            "LOG": "Endereço",
            "NUM": "Nº",
            "NOME_1": "Colega 1",
            "DOC_1": "CPF Colega 1",
            "NOME_2": "Colega 2",
            "DOC_2": "CPF Colega 2",
            "NOME_3": "Colega 3",
            "DOC_3": "CPF Colega 3",
            "NOME_4": "Colega 4",
            "DOC_4": "CPF Colega 4",
            "NOME_5": "Colega 5",
            "DOC_5": "CPF Colega 5",
            "NOME_6": "Colega 6",
            "DOC_6": "CPF Colega 6",
            "NOME_7": "Colega 7",
            "DOC_7": "CPF Colega 7"
        };
    }

    for (var i in _vars) {
        if (i in data && data[i]) {
            result += "<tr><td class=\"lead\">" + _vars[i] + "</td><td>" + data[i] + "</td></tr>";
        }
    }

    return result;
}

function getFArray(form) {
    var data;
    var result = {};

    data = $(form).serializeArray();

    for (var a of data) {
        result[a.name] = a.value;
    }

    return result;
}

$(".form-pontos").on("submit", function(){
    consultaPontos(this).then(_mostraPontos);
    return false;
});

$("#toggleDeps").click(function() {
    $("#areaDeps").slideToggle();
    $(this).toggleClass("fa-plus").toggleClass("fa-minus");
});

$("#toggleCol").click(function() {
    $("#areaCol").slideToggle();
    $(this).toggleClass("fa-plus").toggleClass("fa-minus");
});

function recalcula() {
    var ycont = $(".cont-cadastro").offset().top;
    var ht = window.innerHeight;
    var dsm = (window.innerWidth > 991)? 104: 0;

    if ($(".acai-navbar").length <= 0) {
        dsm = 0;
        $(".cont-cadastro").css("margin-bottom", "0");
    }

    var _siz = ht - ycont - dsm;

    $(".cont-cadastro").css("min-height", _siz + "px");
}

function cadastraCliente(form) {
    return new Promise(function(callback) {
        var _url = "/backend/cadastrar-cliente/index.php";
        var data = $(form).serialize();
        $.post(_url, data, callback, "json");
    });
}

function consultaPontos(form) {
    return new Promise(function(callback) {
        var _url = "/backend/pontos-cliente/index.php";
        var data = $(form).serialize();
        $.post(_url, data, callback, "json");
    });
}

function _log(a) {
    if (a.status) {
        var _num = ("000000" + a.dados).substr(-6,6);
        swal("Parabéns!", "Código de compra nº " + _num, "success").then(_reload);
    } else {
        swal("Algo deu errado...", a.msgErro, "error");
    }
}

function _reload() {
    location.reload();
}

function _mostraPontos(a) {
    if (a.status) {
        var area = $(".area-info-pontos");
        area.find(".NOME").text(a.dados.NOME.toLowerCase())
        area.find(".SALDO").text(a.dados.SALDO)
        area.find(".PONTOS").text(a.dados.PONTOS)
        area.slideDown();
    } else {
        alert(a.msgErro);
    }
}

$(".close-area").click(function() {
    var area = $(".area-info-pontos");
    area.find(".NOME").text('')
    area.find(".SALDO").text('')
    area.find(".PONTOS").text('')
    area.slideUp();
});
})();
</script>