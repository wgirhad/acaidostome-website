function getTable(data) {
    var result = "";
    var _vars = {};
    if (data.TIPO == "I") {
        _vars = {
            "NOME": "Nome Completo",
            "DOC": "CPF",
            "ZOP": "WhatsApp",
            "LOG": "Endereço",
            "NUM": "Nº"
        };
    }

    if (data.TIPO == "C") {
        _vars = {
            "NOME": "Nome Tucano Master",
            "DOC": "CPF",
            "ZOP": "WhatsApp",
            "LOG": "Endereço",
            "NUM": "Nº",
            "NOME_1": "Colega 1",
            "DOC_1": "CPF Colega 1",
            "NOME_2": "Colega 2",
            "DOC_2": "CPF Colega 2",
            "NOME_3": "Colega 3",
            "DOC_3": "CPF Colega 3",
            "NOME_4": "Colega 4",
            "DOC_4": "CPF Colega 4",
            "NOME_5": "Colega 5",
            "DOC_5": "CPF Colega 5",
            "NOME_6": "Colega 6",
            "DOC_6": "CPF Colega 6",
            "NOME_7": "Colega 7",
            "DOC_7": "CPF Colega 7"
        };
    }

    for (var i in _vars) {
        if (i in data && data[i]) {
            result += "<tr><td class=\"lead\">" + _vars[i] + "</td><td>" + data[i] + "</td></tr>";
        }
    }

    return result;
}

function getFArray(form) {
    var data;
    var result = {};

    data = $(form).serializeArray();

    for (var a of data) {
        result[a.name] = a.value;
    }

    return result;
}

